{
    "name": "palmtree/string",
    "description": "Object-oriented string manipulation library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andy Palmer",
            "email": "andy@andypalmer.me",
            "homepage": "https://andypalmer.me"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "Palmtree\\String\\": "src"
        },
        "files": [
            "functions.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "vimeo/psalm": "^5.2",
        "palmtree/php-cs-fixer-config": "^2.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Palmtree\\String\\Test\\": "tests"
        }
    },
    "scripts": {
        "fix": "@php vendor/bin/php-cs-fixer fix",
        "psalm": "@php vendor/bin/psalm --no-cache",
        "test": "@php vendor/bin/phpunit"
    },
    "config": {
        "platform": {
            "php": "8.1"
        }
    }
}
